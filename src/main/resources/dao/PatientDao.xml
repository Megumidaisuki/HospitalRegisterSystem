<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.megumi.hospitalregistersystem.dao.PatientDao">
    <insert id="save">
        insert into patient (username,password,name,gender,age,phone,email) values (#{username},#{password},#{name},#{gender},#{age},#{phone},#{email})
    </insert>
    <insert id="register">
        insert into register_message(name,cost,patient_name,doctor_name) values (#{name},#{cost},#{patientName},#{doctorName})
    </insert>
    <insert id="newPatientMessage">
        insert into patient_message(name,age,gender,phone,email,discredit_times,doctor_name)values (#{patientName},#{age},#{gender},#{phone},#{email},#{discredit_times},#{doctorName})
    </insert>
    <update id="updateStatus">
        update patient (status) values (1) where id =#{id}
    </update>
    <update id="updatePassword">
        update patient(password) values (#{newPass}) where username =#{username} and password =#{password}
    </update>
    <select id="getByUsername" resultType="com.megumi.hospitalregistersystem.domain.Patient">
        select * from patient where username=#{username}
    </select>
    <select id="login" resultType="com.megumi.hospitalregistersystem.domain.Patient">
        select * from patient where username=#{username} and password=#{password}
    </select>
    <select id="queryByNameAndDepartment" resultType="com.megumi.hospitalregistersystem.domain.Doctor">
        select * from doctor where name like concat('%',#{name},'%') and department like concat('%',#{department},'%')
    </select>
    <select id="getByDepartment" resultType="com.megumi.hospitalregistersystem.domain.RegisterType">
        select * from register_type where department=#{department}
    </select>
    <select id="getByNameAndDepartment" resultType="com.megumi.hospitalregistersystem.domain.RegisterType">
        select * from register_type where name like concat('%',#{name},'%') and department like concat('%',#{department},'%')
    </select>
    <select id="getNameById" resultType="java.lang.String">
        select name from patient where id = #{id}
    </select>
    <select id="getRegisterMessageByName"
            resultType="com.megumi.hospitalregistersystem.domain.RegisterMessage">
        select * from register_message where name=#{name}
    </select>
</mapper>